@model HR.Web.Controllers.CompaniesDashboardViewModel
@{
    ViewBag.Title = "Companies Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --system-blue: #6fb8dc;
        --system-dark: #0d2c4a;
        --border-color: #b2d7f7;
        --bg-light: #f6faff;
    }

    .dashboard-wrapper {
        padding: 20px 0;
        background: var(--bg-light);
        min-height: calc(100vh - 150px);
    }

    .stat-card {
        background: #fff;
        border: 1.2px solid var(--border-color);
        border-radius: 8px;
        padding: 20px;
        text-align: center;
        margin-bottom: 20px;
        transition: transform 0.2s;
    }

    .stat-card h1 {
        margin: 0;
        font-weight: 700;
        color: var(--system-dark);
        font-size: 2.5rem;
    }

    .stat-card p {
        margin: 5px 0 0;
        color: #6c757d;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .stat-primary { border-top: 4px solid var(--system-blue); }
    .stat-success { border-top: 4px solid #28a745; }
    .stat-warning { border-top: 4px solid #ffcc00; }
    .stat-danger { border-top: 4px solid #dc3545; }

    .content-card {
        background: #fff;
        border: 1.2px solid var(--border-color);
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        margin-top: 20px;
    }

    .card-header-system {
        background: #fafbfc;
        border-bottom: 1.2px solid var(--border-color);
        padding: 15px 25px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .card-header-system h4 {
        margin: 0;
        font-weight: 600;
        color: var(--system-dark);
        display: flex;
        align-items: center;
    }

    .card-header-system h4 i {
        margin-right: 10px;
        color: var(--system-blue);
    }

    .table-system {
        margin: 0;
    }

    .table-system th {
        background: #f8f9fa;
        color: var(--system-dark);
        font-weight: 600;
        border-top: none;
        padding: 15px;
        font-size: 0.85rem;
        text-transform: uppercase;
    }

    .table-system td {
        padding: 15px;
        vertical-align: middle;
        border-bottom: 1px solid #f1f3f5;
    }

    .badge-system {
        padding: 6px 10px;
        border-radius: 4px;
        font-weight: 600;
        font-size: 0.75rem;
    }

    .btn-action {
        padding: 6px 12px;
        border-radius: 4px;
        font-size: 0.85rem;
        font-weight: 600;
    }

    .btn-create-new {
        background: var(--system-blue);
        color: var(--system-dark);
        border: none;
        font-weight: 600;
        padding: 8px 16px;
        border-radius: 4px;
    }

    .btn-create-new:hover {
        background: #3498db;
        color: #fff;
    }
</style>

<div class="dashboard-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 mb-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2 style="color: var(--system-dark); font-weight: 700; margin: 0;">Companies <span style="font-weight: 300;">Management</span></h2>
                        <p class="text-muted m-0">System-wide overview of all registered tenants.</p>
                    </div>
                    <a href="@Url.Action("CreateCompany")" class="btn-blue">
                        <i class="fas fa-plus-circle mr-2"></i> Register New Company
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <div class="stat-card stat-primary">
                    <h1>@Model.TotalCompanies</h1>
                    <p>Total Registered</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card stat-success">
                    <h1>@Model.ActiveCompanies</h1>
                    <p>Active Tenants</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card stat-warning">
                    <h1>@Model.ExpiringSoon</h1>
                    <p>Expiring Soon</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card stat-danger">
                    <h1>@Model.ExpiredCompanies</h1>
                    <p>Expired Licenses</p>
                </div>
            </div>
        </div>

        <div class="content-card">
            <div class="card-header-system">
                <h4><i class="fas fa-list-ul"></i> Registered Companies</h4>
            </div>
            <div class="table-responsive">
                <table class="table table-system">
                    <thead>
                        <tr>
                            <th>Company Identity</th>
                            <th>Portal URL</th>
                            <th>Status</th>
                            <th>License Status</th>
                            <th class="text-center">Usage</th>
                            <th class="text-right">Management</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var company in Model.Companies.OrderBy(c => c.Name))
                        {
                            var expiryClass = company.DaysUntilExpiry.HasValue && company.DaysUntilExpiry.Value < 0 ? "danger" : 
                                             (company.DaysUntilExpiry.HasValue && company.DaysUntilExpiry.Value <= 30 ? "warning" : "success");
                            
                            <tr>
                                <td>
                                    <div style="font-weight: 600; color: var(--system-dark);">@company.Name</div>
                                    <div class="text-muted small">ID: @company.Id &bull; Created @company.CreatedDate.ToString("MMM yyyy")</div>
                                </td>
                                <td><code>/@company.Slug</code></td>
                                <td>
                                    <span class="badge badge-system badge-@(company.IsActive ? "success" : "danger")">
                                        @(company.IsActive ? "ACTIVE" : "INACTIVE")
                                    </span>
                                </td>
                                <td>
                                    @if (company.LicenseExpiryDate.HasValue)
                                    {
                                        <div style="font-weight: 600;">@company.LicenseExpiryDate.Value.ToString("dd MMM yyyy")</div>
                                        <div class="small text-@expiryClass">
                                            @if (company.DaysUntilExpiry.Value < 0) {
                                                <i class="fas fa-exclamation-circle mr-1"></i><span>Expired</span>
                                            } else {
                                                <span>@company.DaysUntilExpiry.Value days left</span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">No Expiry Set</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-3">
                                        <div title="Users" class="small"><i class="fas fa-users text-muted mr-1"></i> @company.UserCount</div>
                                        <div title="Positions" class="small"><i class="fas fa-briefcase text-muted mr-1"></i> @company.PositionCount</div>
                                        <div title="Applications" class="small"><i class="fas fa-file-invoice text-muted mr-1"></i> @company.ApplicationCount</div>
                                    </div>
                                </td>
                                <td class="text-right">
                                    <div class="d-flex justify-content-end gap-2">
                                        <a href="@Url.Action("Index", "Positions", new { companyId = company.Id })" class="btn btn-sm btn-outline-primary" title="Manage Positions">
                                            <i class="fas fa-briefcase"></i> Jobs
                                        </a>
                                        <a href="@Url.Action("CompanyDetails", new { id = company.Id })" class="btn btn-sm btn-outline-info" title="View Full Profile">
                                            <i class="fas fa-external-link-alt"></i> Profile
                                        </a>
                                        <a href="@Url.Action("EditCompany", new { id = company.Id })" class="btn-blue" style="font-size: 0.85rem; padding: 6px 15px; text-decoration: none;">
                                            <i class="fas fa-edit mr-1"></i> Edit
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()
