@model HR.Web.Controllers.CompanyDetailsViewModel
@{
    ViewBag.Title = "Company Profile - " + Model.Company.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --system-blue: #6fb8dc;
        --system-dark: #0d2c4a;
        --border-color: #b2d7f7;
        --bg-light: #f6faff;
    }

    .details-wrapper {
        padding: 30px 0;
        background: var(--bg-light);
        min-height: calc(100vh - 150px);
    }

    .profile-header {
        background: #fff;
        border: 1.2px solid var(--border-color);
        border-radius: 8px;
        padding: 25px 30px;
        margin-bottom: 25px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .profile-title h2 {
        margin: 0;
        color: var(--system-dark);
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .profile-title h2 i {
        color: var(--system-blue);
    }

    .profile-title p {
        margin: 5px 0 0;
        color: #6c757d;
        font-size: 0.95rem;
    }

    .section-card {
        background: #fff;
        border: 1.2px solid var(--border-color);
        border-radius: 8px;
        margin-bottom: 25px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        overflow: hidden;
    }

    .section-header {
        background: #fafbfc;
        border-bottom: 1.2px solid var(--border-color);
        padding: 15px 25px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .section-header h4 {
        margin: 0;
        color: var(--system-dark);
        font-weight: 600;
        font-size: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .section-body {
        padding: 25px;
    }

    .stat-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .mini-stat {
        background: #fff;
        border: 1px solid #edf2f7;
        padding: 20px;
        border-radius: 8px;
        text-align: center;
    }

    .mini-stat h3 {
        margin: 0;
        font-weight: 700;
        color: var(--system-dark);
        font-size: 1.8rem;
    }

    .mini-stat p {
        margin: 5px 0 0;
        color: #718096;
        font-size: 0.8rem;
        text-transform: uppercase;
        font-weight: 600;
    }

    .info-table th {
        color: #718096;
        font-weight: 600;
        font-size: 0.85rem;
        text-transform: uppercase;
        width: 150px;
    }

    .info-table td {
        color: var(--system-dark);
        font-weight: 500;
    }

    .table-details th {
        background: #f8fafc;
        color: var(--system-dark);
        font-weight: 600;
        font-size: 0.8rem;
        text-transform: uppercase;
        border-top: none;
        padding: 12px 15px;
    }

    .table-details td {
        padding: 12px 15px;
        vertical-align: middle;
        font-size: 0.9rem;
    }

    .badge-status {
        padding: 5px 10px;
        border-radius: 4px;
        font-weight: 600;
        font-size: 0.7rem;
    }

    .btn-system-sm {
        padding: 5px 12px;
        font-size: 0.8rem;
        font-weight: 600;
        border-radius: 4px;
    }

    .btn-impersonate {
        background: #f6ad55;
        color: #fff;
        border: none;
        font-weight: 700;
        padding: 12px 20px;
        border-radius: 6px;
        width: 100%;
        margin-top: 15px;
        transition: background 0.2s;
    }

    .btn-impersonate:hover {
        background: #ed8936;
        color: #fff;
    }
</style>

<div class="details-wrapper">
    <div class="container-fluid">
        <div class="profile-header">
            <div class="profile-title">
                <h2><i class="fas fa-building"></i> @Model.Company.Name</h2>
                <p>System Slug: <code>/@Model.Company.Slug</code> &bull; Resource ID: #@Model.Company.Id</p>
            </div>
            <div class="d-flex gap-2">
                <a href="@Url.Action("EditCompany", new { id = Model.Company.Id })" class="btn-blue" style="font-size: 0.85rem; padding: 6px 15px; text-decoration: none;">
                    <i class="fas fa-edit mr-1"></i> Edit Configuration
                </a>
                <a href="@Url.Action("Index")" class="btn-red" style="font-size: 0.85rem; padding: 6px 15px; text-decoration: none;">
                    <i class="fas fa-arrow-left mr-1"></i> Dashboard
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4">
                <div class="section-card">
                    <div class="section-header">
                        <h4>Administrative Info</h4>
                    </div>
                    <div class="section-body">
                        <table class="table info-table mb-0">
                            <tr>
                                <th>Operational Status</th>
                                <td>
                                    <span class="badge-status badge-@(Model.Company.IsActive ? "success" : "danger")">
                                        @(Model.Company.IsActive ? "ACTIVE" : "INACTIVE")
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <th>Registration Date</th>
                                <td>@Model.Company.CreatedDate.ToString("dd MMM yyyy")</td>
                            </tr>
                            <tr>
                                <th>Licensing</th>
                                <td>
                                    @if (Model.Company.LicenseExpiryDate.HasValue)
                                    {
                                        var days = (Model.Company.LicenseExpiryDate.Value - DateTime.Now).Days;
                                        <div style="font-weight: 600;">@Model.Company.LicenseExpiryDate.Value.ToString("dd MMM yyyy")</div>
                                        <div class="small @(days < 0 ? "text-danger" : (days <= 30 ? "text-warning" : "text-success"))">
                                            @(days < 0 ? "Expired " + Math.Abs(days) + " days ago" : days + " days remaining")
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Indefinite / No Expiry</span>
                                    }
                                </td>
                            </tr>
                        </table>
                        
                        @if (Session["ImpersonatedCompanyId"] != null && (int)Session["ImpersonatedCompanyId"] == Model.Company.Id)
                        {
                            <div class="alert alert-warning shadow-sm mt-3 pt-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h6 class="mb-0 font-weight-bold"><i class="fas fa-user-check mr-2"></i> Session in Progress</h6>
                                    <span class="badge badge-warning text-uppercase" style="font-size: 0.6rem;">Active</span>
                                </div>
                                <p class="small mb-3 text-dark">
                                    You are currently acting as an Admin for this company.
                                </p>
                                <a href="@Url.Action("Index", "Dashboard")" class="btn btn-warning btn-block font-weight-bold">
                                    <i class="fas fa-home mr-2"></i> Go to Dashboard
                                </a>
                            </div>
                        }
                        else if (Model.PendingImpersonationRequests.Any(r => r.RequestedBy == User.Identity.Name))
                        {
                            var activeRequest = Model.PendingImpersonationRequests.First(r => r.RequestedBy == User.Identity.Name);
                            <div class="alert alert-info shadow-sm mt-3 pt-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h6 class="mb-0 font-weight-bold"><i class="fas fa-clock mr-2"></i> Request Pending</h6>
                                    <span class="badge badge-info text-uppercase" style="font-size: 0.6rem;">Sent</span>
                                </div>
                                <p class="small mb-2 text-dark">Target: <strong>@activeRequest.RequestedFrom</strong></p>
                                <div class="d-flex gap-2">
                                    @using (Html.BeginForm("CancelImpersonationRequest", "Companies", FormMethod.Post, new { @class = "flex-fill" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="requestId" value="@activeRequest.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger btn-block font-weight-bold">
                                            <i class="fas fa-times-circle mr-1"></i> Retract Request
                                        </button>
                                    }
                                </div>
                            </div>
                        }
                        else if (Model.ActiveApprovedRequest != null)
                        {
                            <div class="alert alert-success shadow-sm mt-3 pt-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h6 class="mb-0 font-weight-bold"><i class="fas fa-check-circle mr-2"></i> Access Authorized</h6>
                                    <span class="badge badge-success text-uppercase" style="font-size: 0.6rem;">Approved</span>
                                </div>
                                @if (Session["ImpersonatedCompanyId"] == null)
                                {
                                    <div class="text-center py-2">
                                        <i class="fas fa-spinner fa-spin fa-2x text-success mb-3"></i>
                                        <p class="font-weight-bold text-dark mb-0">Automating login...</p>
                                        <p class="small text-muted">Signed by @Model.ActiveApprovedRequest.RequestedFrom</p>
                                    </div>
                                    using (Html.BeginForm("Elevate", "Companies", FormMethod.Post, new { id = "autoElevateForm" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="requestId" value="@Model.ActiveApprovedRequest.Id" />
                                        <button type="submit" class="btn btn-success btn-block font-weight-bold mt-2">
                                            <i class="fas fa-user-shield mr-2"></i> Entering Admin Mode...
                                        </button>
                                    }
                                    <script>
                                        document.addEventListener('DOMContentLoaded', function() {
                                            // Only auto-submit if we aren't already impersonating something else
                                            setTimeout(function() {
                                                var form = document.getElementById('autoElevateForm');
                                                if (form) form.submit();
                                            }, 800);
                                        });
                                    </script>
                                }
                                else
                                {
                                    <p class="small mb-3 text-dark">
                                        An authorization for this company is ready, but you are currently in another session.
                                    </p>
                                    using (Html.BeginForm("Elevate", "Companies", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="requestId" value="@Model.ActiveApprovedRequest.Id" />
                                        <button type="submit" class="btn btn-success btn-block font-weight-bold">
                                            <i class="fas fa-exchange-alt mr-2"></i> Switch to This Company
                                        </button>
                                    }
                                }
                            </div>
                        }
                        else
                        {
                            if (Model.ActiveRejectedRequest != null)
                            {
                                <div class="alert alert-danger shadow-sm mt-3 pt-3">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <h6 class="mb-0 font-weight-bold"><i class="fas fa-ban mr-2"></i> Access Denied</h6>
                                        <span class="badge badge-danger text-uppercase" style="font-size: 0.6rem;">Rejected</span>
                                    </div>
                                    <p class="small mb-2 text-dark">Rejected by: <strong>@Model.ActiveRejectedRequest.RequestedFrom</strong></p>
                                    @if (!string.IsNullOrEmpty(Model.ActiveRejectedRequest.AdminNotes)) {
                                        <div class="bg-white p-2 rounded small border mb-3">"@Model.ActiveRejectedRequest.AdminNotes"</div>
                                    }
                                    <button type="button" class="btn btn-sm btn-outline-dark btn-block font-weight-bold" data-toggle="modal" data-target="#impersonateModal">
                                        <i class="fas fa-redo mr-1"></i> Try New Request
                                    </button>
                                </div>
                            }
                            else
                            {
                                <button type="button" class="btn-impersonate" data-toggle="modal" data-target="#impersonateModal">
                                    <i class="fas fa-user-shield mr-2"></i> Elevate to Admin (Request)
                                </button>
                            }
                        }
                    </div>
                </div>

                <div class="section-card">
                    <div class="section-header">
                        <h4>Operational Metrics</h4>
                    </div>
                    <div class="section-body">
                        <div class="stat-grid">
                            <div class="mini-stat"><h3>@Model.Users.Count</h3><p>Users</p></div>
                            <div class="mini-stat"><h3>@Model.Departments.Count</h3><p>Depts</p></div>
                            <div class="mini-stat"><h3>@Model.Positions.Count</h3><p>Openings</p></div>
                            <div class="mini-stat"><h3>@Model.Applications.Count</h3><p>Apps</p></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <!-- Data Tables -->
                <div class="section-card">
                    <div class="section-header">
                        <h4>Authorized Staff</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-details">
                            <thead>
                                <tr>
                                    <th>Account Name</th>
                                    <th>Communication</th>
                                    <th>Security Role</th>
                                    <th>Last Authentication</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.Users.OrderBy(u => u.UserName))
                                {
                                    <tr>
                                        <td><strong>@user.UserName</strong></td>
                                        <td>@user.Email</td>
                                        <td><span class="badge badge-light border">@user.Role</span></td>
                                        <td>@(user.LastPasswordChange.HasValue ? user.LastPasswordChange.Value.ToString("dd MMM yyyy") : "Initial Setup")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="section-card">
                    <div class="section-header">
                        <h4>Security Audit Feed (Last 15)</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-details">
                            <thead>
                                <tr>
                                    <th>Timestamp</th>
                                    <th>Subject</th>
                                    <th>Action Signature</th>
                                    <th>Status Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var log in Model.RecentAuditLogs.Take(15))
                                {
                                    <tr>
                                        <td><span class="text-muted">@log.Timestamp.ToString("HH:mm:ss dd/MM")</span></td>
                                        <td>@log.Username</td>
                                        <td><code>@log.Action</code></td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(log.ErrorMessage)) {
                                                <span class="text-danger">Critical: @(log.ErrorMessage.Length > 30 ? log.ErrorMessage.Substring(0, 30) + "..." : log.ErrorMessage)</span>
                                            } else {
                                                <span class="text-success small"><i class="fas fa-check"></i> Standard Operation</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="section-card">
                    <div class="section-header">
                        <h4>Licensing History</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-details">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Executor</th>
                                    <th>Renewal</th>
                                    <th>Previous Expiry</th>
                                    <th>New Expiry</th>
                                    <th>Notes</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.LicenseTransactions.Any())
                                {
                                    foreach (var trans in Model.LicenseTransactions)
                                    {
                                        <tr>
                                            <td><span class="text-muted">@trans.TransactionDate.ToString("dd MMM yyyy")</span></td>
                                            <td><strong>@trans.ExecutedBy</strong></td>
                                            <td><span class="badge badge-info">+@trans.ExtendedByValue @trans.ExtendedByUnit</span></td>
                                            <td>@(trans.PreviousExpiry.HasValue ? trans.PreviousExpiry.Value.ToString("dd MMM yyyy") : "Initial")</td>
                                            <td><strong class="text-success">@trans.NewExpiry.ToString("dd MMM yyyy")</strong></td>
                                            <td><small class="text-muted">@(string.IsNullOrEmpty(trans.Notes) ? "Standard Renewal" : trans.Notes)</small></td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-4 text-muted">
                                            <i class="fas fa-info-circle mr-1"></i> No license modification history available for this company.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Impersonate Modal -->
<div class="modal fade" id="impersonateModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content border-0">
            @using (Html.BeginForm("RequestImpersonation", "Companies", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="companyId" value="@Model.Company.Id" />
                <div class="modal-header bg-warning py-4">
                    <h5 class="modal-title font-weight-bold"><i class="fas fa-exclamation-triangle mr-2"></i> Impersonation Access Request</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body p-4">
                    <div class="alert alert-info shadow-sm mb-4">
                        <i class="fas fa-info-circle mr-2"></i> <strong>Automated Session:</strong> Once your request is approved, you will be automatically signed in as an administrator for <strong>@Model.Company.Name</strong>.
                    </div>
                    
                    <div class="form-group mb-4">
                        <label class="font-weight-bold">Target Administrator for Approval:</label>
                        @if (Model.CompanyAdmins.Count == 1)
                        {
                            var admin = Model.CompanyAdmins.First();
                            <div class="p-3 border rounded bg-light">
                                <i class="fas fa-user-check text-success mr-2"></i>
                                <strong>@admin.UserName</strong> (@admin.Email)
                                <input type="hidden" name="targetAdmin" value="@admin.UserName" />
                            </div>
                            <small class="text-muted d-block mt-2">This is the designated company administrator who will receive your request.</small>
                        }
                        else
                        {
                            <select name="targetAdmin" class="form-control" required>
                                <option value="">-- Select Administrator --</option>
                                @foreach (var admin in Model.CompanyAdmins)
                                {
                                    <option value="@admin.UserName">@admin.UserName (@admin.Email)</option>
                                }
                            </select>
                            <small class="text-muted">Select which administrator should authorize this session.</small>
                        }
                    </div>
                </div>
                <div class="modal-footer bg-light p-3">
                    <button type="button" class="btn btn-secondary px-4" data-dismiss="modal">Abort</button>
                    <button type="submit" class="btn btn-warning font-weight-bold px-4">Send Request</button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @if (Model.PendingImpersonationRequests.Any(r => r.RequestedBy == User.Identity.Name))
    {
        var activeRequest = Model.PendingImpersonationRequests.First(r => r.RequestedBy == User.Identity.Name);
        <script>
            $(document).ready(function() {
                function checkRequestStatus() {
                    $.get('@Url.Action("CheckRequestStatus", "Dashboard")', { requestId: @activeRequest.Id }, function(data) {
                        if (data.status === 'Approved') {
                            location.reload(); // Reload will trigger the auto-elevate form
                        } else if (data.status === 'Rejected' || data.status === 'Cancelled') {
                            location.reload();
                        }
                    });
                }
                setInterval(checkRequestStatus, 5000);
            } );
        </script>
    }
}
