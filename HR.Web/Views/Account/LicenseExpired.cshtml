@{
    ViewBag.Title = "License Expired";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 100px; text-align: center;">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <i class="glyphicon glyphicon-exclamation-sign"></i>
                        License Expired
                    </h3>
                </div>
                <div class="panel-body" style="padding: 40px;">
                    <h2 style="color: #d9534f; margin-bottom: 20px;">
                        <i class="glyphicon glyphicon-lock" style="font-size: 60px; display: block; margin-bottom: 20px;"></i>
                        Your Company's License Has Expired
                    </h2>
                    <p style="font-size: 16px; color: #666; margin-bottom: 30px;">
                        Access to the HR Recruitment System has been suspended because your company's license has expired.
                    </p>
                    <p style="font-size: 14px; color: #999;">
                        Please contact your system administrator or our support team to renew your license.
                    </p>
                    <div style="margin-top: 40px;">
                        <a href="@Url.Action("Logout", "Account")" class="btn btn-default btn-lg">
                            <i class="glyphicon glyphicon-log-out"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
