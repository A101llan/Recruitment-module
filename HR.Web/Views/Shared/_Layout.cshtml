<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Recruitment Module</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/css/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/css/font-awesome.min.css")" />
    <style>
        .navbar-nav .nav-item.active > .nav-link {
            box-shadow: 0 0 8px 2px #007bff, 0 0 0 2px #fff inset;
            border-radius: 6px;
            background: rgba(0,123,255,0.08);
            color: #007bff !important;
        }

        /* Company logo styling */
        .navbar-brand img {
            transition: transform 0.2s ease-in-out;
        }
        .navbar-brand:hover img {
            transform: scale(1.05);
        }
        
        .navbar-brand .font-weight-bold {
            font-size: 1.1rem;
        }
        
        .navbar-brand .text-muted {
            font-size: 0.75rem;
            line-height: 1;
        }

        /* Mobile navbar tweaks */
    @@media (max-width: 576px) {
        .navbar-nav .nav-link {
            padding: 0.6rem 0.8rem;
            font-size: 0.95rem;
        }

        .navbar-brand {
            font-size: 0.95rem;
            white-space: normal;
        }
        
        .navbar-brand img {
            height: 30px !important;
            max-height: 30px !important;
        }
        
        .navbar-brand .text-light {
            font-size: 0.7rem;
        }
        
        .navbar-brand .d-flex.flex-column {
            margin-left: 0.5rem !important;
        }
    }
        /* Shared button styles for blue save and red back */
        .btn-blue {
            background: #6fb8dc;
            color: #0d2c4a;
            border: none;
            transition: background 0.2s;
            font-size: 0.97rem;
            padding: 0.5rem 1.2rem;
            border-radius: 0.4rem;
            font-weight: 600;
        }
        .btn-blue:hover { background: #3498db; color: #fff; }

        .btn-red {
            background: #e05656;
            color: #0d2c4a;
            border: none;
            transition: background 0.2s;
            font-size: 0.97rem;
            padding: 0.5rem 1.2rem;
            border-radius: 0.4rem;
            font-weight: 600;
        }
        .btn-red:hover { background: #c0392b; color: #fff; }

        @@media (min-width: 768px) {
        .w-md-50 {
            width: 50% !important;
        }
    }
        /* Elevation Modal Custom Styles */
        #elevationRequestModal .modal-content {
            border-radius: 12px;
            overflow: hidden;
            border: none;
        }
        #elevationRequestModal .modal-header {
            border-bottom: none;
            padding: 1.5rem;
        }
        #elevationRequestModal .details-box {
            background-color: #f8f9fa;
            border-left: 4px solid #f39c12;
            padding: 1rem;
            margin-bottom: 1rem;
        }
        #elevationRequestModal .modal-footer {
            border-top: none;
            padding: 1.2rem 1.5rem;
        }

        /* Freeze Overlay Styles */
        #performance-freeze-overlay {
            position: fixed;
            top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(13, 44, 74, 0.95);
            z-index: 10000;
            display: none;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            color: #fff;
            backdrop-filter: blur(8px);
            text-align: center;
            padding: 20px;
        }
        #performance-freeze-overlay .spinner-box {
            margin-bottom: 25px;
        }
        #performance-freeze-overlay h2 {
            font-weight: 800;
            letter-spacing: -0.5px;
            margin-bottom: 10px;
        }
        #performance-freeze-overlay p {
            font-size: 1.1rem;
            opacity: 0.8;
            max-width: 500px;
        }
    </style>
</head>
<body>
    @if (Session["ImpersonatedCompanyId"] != null)
    {
        <div class="alert alert-warning mb-0 border-0 rounded-0" style="background-color: #f39c12; color: #fff; z-index: 9999; position: relative;">
            <div class="container d-flex justify-content-between align-items-center">
                <span>
                    <i class="fas fa-user-secret mr-2"></i>
                    <strong>IMPERSONATING:</strong> @(Session["ImpersonatedCompanyName"] ?? "Tenant") 
                    <small class="ml-2">(Reason: @(Session["ImpersonationReason"] ?? "N/A"))</small>
                </span>
                <a href="@Url.Action("StopImpersonating", "Companies")" class="btn btn-dark btn-sm shadow-sm" style="font-weight: bold; border-radius: 4px;">
                    <i class="fas fa-sign-out-alt mr-1"></i> Return to SuperAdmin role
                </a>
            </div>
        </div>
    }
    
    <div id="performance-freeze-overlay">
        <div class="spinner-box">
            <i class="fas fa-shield-alt fa-5x text-warning fa-pulse"></i>
        </div>
        <h2>System Elevating...</h2>
        <p>A SuperAdmin is currently performing maintenance or support operations on your company context. Access is temporarily restricted to ensure data integrity.</p>
        <div class="mt-4 px-4 py-2 bg-warning text-dark font-weight-bold rounded shadow-sm">
            <i class="fas fa-lock mr-2"></i> CONTEXT LOCKED
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-3">
        @{
            string brandUrl = Url.Action("Index", "Positions");
            if (User != null && User.Identity != null && User.Identity.IsAuthenticated)
            {
                if (Session["ImpersonatedCompanyId"] != null) {
                    brandUrl = Url.Action("Index", "Dashboard");
                } else if (User.IsInRole("SuperAdmin")) {
                    brandUrl = Url.Action("Index", "Companies");
                } else if (User.IsInRole("Admin")) {
                    brandUrl = Url.Action("Index", "Dashboard");
                }
            }
        }
        <a class="navbar-brand d-flex align-items-center" href="@brandUrl">
            <img src="@Url.Content("~/Content/images/nanosoft-logo-transparent.png")" alt="Nanosoft Technologies" height="40" class="mr-2" style="max-height: 40px;" onerror="console.log('PNG logo failed, trying JPG'); this.src='@Url.Content("~/Content/images/nanosoft-logo.jpg")';" />
            <div class="d-flex flex-column ml-2">
                <small class="text-light">Welcome</small>
                @if (User != null && User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <span style="font-weight: bold; color: white;">@(char.ToUpper(User.Identity.Name[0]) + User.Identity.Name.Substring(1).ToLower())</span>
                }
            </div>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                @if (User != null && User.Identity != null && User.IsInRole("SuperAdmin") && Session["ImpersonatedCompanyId"] == null)
                {
                    <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Companies" ? "active" : "")">
                        <a class="nav-link" href="@Url.Action("Index","Companies")" style="background-color: #ff6b6b; color: white; border-radius: 4px; margin-left: 10px;">
                            <i class="fas fa-building"></i> Companies
                        </a>
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Licenses" ? "active" : "")">
                        <a class="nav-link" href="@Url.Action("Index","Licenses")" style="background-color: #f1c40f; color: #333; border-radius: 4px; margin-left: 10px;">
                            <i class="fas fa-key"></i> Licenses
                        </a>
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Positions" ? "active" : "")">
                        <a class="nav-link" href="@Url.Action("Index","Positions")" style="background-color: #6fb8dc; color: #0d2c4a; border-radius: 4px; margin-left: 10px;">
                            <i class="fas fa-sitemap"></i> Positions
                        </a>
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Admin" && ViewContext.RouteData.Values["action"].ToString() == "GlobalUserManagement" ? "active" : "")">
                        <a class="nav-link" href="@Url.Action("GlobalUserManagement","Admin")" style="background-color: #9b59b6; color: white; border-radius: 4px; margin-left: 10px;">
                            <i class="fas fa-users-cog"></i> System Users
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Positions" ? "active" : "")">
                        <a class="nav-link" href="@Url.Action("Index","Positions")"><i class="fas fa-sitemap"></i> Positions</a>
                    </li>
                }

                @if (User == null || (!User.IsInRole("SuperAdmin") || Session["ImpersonatedCompanyId"] != null))
                {
                    <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Applications" ? "active" : "")"><a class="nav-link" href="@Url.Action("Index","Applications")"><i class="fas fa-file-alt"></i> Applications</a></li>
                    <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Interviews" ? "active" : "")"><a class="nav-link" href="@Url.Action("Index","Interviews")"><i class="fas fa-comments"></i> Interviews</a></li>
                }

                @if (User != null && User.Identity != null && User.IsInRole("Admin"))
                {
                    <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Admin" && ViewContext.RouteData.Values["action"].ToString() == "Questions" ? "active" : "")">
                        <a class="nav-link" href="@Url.Action("Questions","Admin")"><i class="fas fa-question-circle"></i> Questions</a>
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Onboardings" ? "active" : "")"><a class="nav-link" href="@Url.Action("Index","Onboardings")"><i class="fas fa-user-check"></i> Onboardings</a></li>
                    <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Applicants" ? "active" : "")"><a class="nav-link" href="@Url.Action("Index","Applicants")"><i class="fas fa-users"></i> Applicants</a></li>
                    <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Admin" && ViewContext.RouteData.Values["action"].ToString() == "UserManagement" ? "active" : "")">
                        <a class="nav-link" href="@Url.Action("UserManagement","Admin")"><i class="fas fa-user-shield"></i> User Management</a>
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Admin" && ViewContext.RouteData.Values["action"].ToString() == "SecurityLogs" ? "active" : "")">
                        <a class="nav-link" href="@Url.Action("SecurityLogs","Admin")"><i class="fas fa-shield-alt"></i> Security Logs</a>
                    </li>
                    <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "ReportGenerator" ? "active" : "")">
                        <a class="nav-link" href="@Url.Action("Index","ReportGenerator")"><i class="fas fa-chart-bar"></i> Reports</a>
                    </li>
                }

                @if (User == null || (!User.IsInRole("SuperAdmin") || Session["ImpersonatedCompanyId"] != null))
                {
                    <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Departments" ? "active" : "")"><a class="nav-link" href="@Url.Action("Index","Departments")"><i class="fas fa-building"></i> Departments</a></li>
                }
            </ul>
            <ul class="navbar-nav ml-auto">
                @if (User != null && User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userMenu" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-user-circle"></i> @(char.ToUpper(User.Identity.Name[0]) + User.Identity.Name.Substring(1).ToLower())
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userMenu">
                            <a class="dropdown-item" href="@Url.Action("ChangePassword", "Account")"><i class="fas fa-key"></i> Change Password</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="@Url.Action("Logout", "Account")"><i class="fas fa-sign-out-alt"></i> Logout</a>
                        </div>
                    </li>
                }
                else
                {
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Login","Account")"><i class="fas fa-sign-in-alt"></i> Login</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Register","Account")"><i class="fas fa-user-plus"></i> Register</a></li>
                }
            </ul>
        </div>
    </nav>

    <div class="container" style="padding-bottom: 120px;">
        @if (TempData["QuestionnaireSuccess"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["QuestionnaireSuccess"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle"></i> @TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        
        @RenderBody()
    </div>

    <footer class="bg-dark text-white text-center py-3" style="position: fixed; bottom: 0; left: 0; right: 0; z-index: 1000;">
        <p class="mb-1">&copy; 2026 Recruitment Management System. All rights reserved.</p>
        <p class="mb-0">
            <a href="#" class="text-white mx-2"><i class="fab fa-facebook"></i></a>
            <a href="#" class="text-white mx-2"><i class="fab fa-twitter"></i></a>
            <a href="#" class="text-white mx-2"><i class="fab fa-linkedin"></i></a>
        </p>
    </footer>

    <script src="@Url.Content("~/Scripts/jquery-3.6.0.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.bundle.min.js")"></script>
    
    <script>
        // Security logic to prevent "Back Button" after Logout
        window.addEventListener('pageshow', function (event) {
            if (event.persisted || (typeof window.performance != "undefined" && window.performance.navigation.type === 2)) {
                // If the page was loaded from history/cache, force a reload to trigger auth check
                window.location.reload();
            }
        });
    </script>

    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <!-- Elevation Request Modal -->
        <div class="modal fade" id="elevationRequestModal" tabindex="-1" role="dialog" aria-labelledby="elevationModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content border-warning shadow">
                    <div class="modal-header bg-warning text-dark">
                        <h5 class="modal-title" id="elevationModalLabel">
                            <i class="fas fa-exclamation-shield mr-2"></i> Elevation Request
                        </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p id="elevationRequestText">A SuperAdmin is requesting temporary access to your company context.</p>
                        <hr />
                        <div id="elevationRequestDetails" class="details-box">
                            <!-- Populated by JS -->
                        </div>
                    </div>
                    <div class="modal-footer d-flex justify-content-between">
                        @using (Html.BeginForm("HandleImpersonationRequest", "Dashboard", FormMethod.Post, new { id = "denyElevationForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="requestId" id="denyRequestId" />
                            <input type="hidden" name="approved" value="false" />
                            <button type="submit" class="btn btn-outline-danger">
                                <i class="fas fa-times mr-1"></i> Deny Access
                            </button>
                        }
                        
                        @using (Html.BeginForm("HandleImpersonationRequest", "Dashboard", FormMethod.Post, new { id = "approveElevationForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="requestId" id="approveRequestId" />
                            <input type="hidden" name="approved" value="true" />
                            <button type="submit" class="btn btn-success font-weight-bold">
                                <i class="fas fa-check mr-1"></i> Grant Access
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>

        <script>
            $(document).ready(function() {
                // Only poll if on a page where we want the popup
                function checkElevationRequests() {
                    $.get('@Url.Action("GetPendingRequests", "Dashboard")', function(data) {
                        if (data.count > 0) {
                            var req = data.requests[0]; // Show the first one
                            $('#elevationRequestDetails').html(
                                '<strong>SuperAdmin:</strong> ' + req.requestedBy + '<br/>' +
                                '<strong>Time:</strong> ' + req.requestDate + '<br/>' +
                                (req.reason ? '<strong>Reason:</strong> ' + req.reason : '')
                            );
                            $('#denyRequestId').val(req.id);
                            $('#approveRequestId').val(req.id);
                            
                            // Only show if not already showing
                            if (!$('#elevationRequestModal').hasClass('show')) {
                                $('#elevationRequestModal').modal('show');
                            }
                        }
                    });
                }

                // Initial check
                checkElevationRequests();
                
                // Poll every 30 seconds
                setInterval(checkElevationRequests, 30000);

                // Check for System Freeze
                function checkSystemFreeze() {
                    $.get('@Url.Action("GetImpersonationStatus", "Dashboard")', function(data) {
                        if (data.isLocked) {
                            $('#performance-freeze-overlay').css('display', 'flex');
                        } else {
                            $('#performance-freeze-overlay').hide();
                        }
                    });
                }
                
                checkSystemFreeze();
                setInterval(checkSystemFreeze, 10000); // Check freeze more frequently
            });
        </script>
    }

    @RenderSection("Scripts", required: false)
</body>
</html>






