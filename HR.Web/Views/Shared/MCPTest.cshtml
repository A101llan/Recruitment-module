@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>MCP Integration Test</title>
    <link href="~/Content/css/bootstrap@5.1.3.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h2>MCP Integration Test</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5>Test MCP Connection</h5>
                    </div>
                    <div class="card-body">
                        <button id="testConnection" class="btn btn-primary">Test Connection</button>
                        <div id="connectionResult" class="mt-3"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5>Test Question Generation</h5>
                    </div>
                    <div class="card-body">
                        <button id="testGeneration" class="btn btn-success">Generate Questions</button>
                        <div id="generationResult" class="mt-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#testConnection').click(function() {
                $('#connectionResult').html('<div class="alert alert-info">Testing connection...</div>');
                $.ajax({
                    url: '/Admin/TestMCPConnection',
                    type: 'GET',
                    dataType: 'json',
                    cache: false,
                    timeout: 3000,
                    success: function(response) {
                        if (response.success && response.connected) {
                            $('#connectionResult').html('<div class="alert alert-success">✅ MCP Connected Successfully!</div>');
                        } else {
                            $('#connectionResult').html('<div class="alert alert-warning">⚠️ MCP Not Available: ' + (response.message || 'Unknown error') + '</div>');
                        }
                    },
                    error: function(xhr, status, err) {
                        $('#connectionResult').html('<div class="alert alert-danger">❌ Connection Test Failed: ' + (status || '') + ' ' + (err || '') + '</div>');
                    }
                });
            });

            $('#testGeneration').click(function() {
                $('#generationResult').html('<div class="alert alert-info">Generating questions...</div>');
                
                $.ajax({
                    url: '/Admin/GenerateQuestions',
                    type: 'POST',
                    dataType: 'json',
                    contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                    traditional: true,
                    cache: false,
                    timeout: 5000,
                    data: {
                        jobTitle: 'Software Developer',
                        jobDescription: 'We are looking for a skilled software developer with experience in web development and databases.',
                        experience: 'mid',
                        'questionTypes': ['technical', 'behavioral'],
                        count: 3
                    },
                    success: function(response) {
                        if (response.success) {
                            var html = '<div class="alert alert-success">✅ Questions Generated Successfully!</div>';
                            html += '<div class="mt-3"><strong>Generated Questions:</strong></div>';
                            response.questions.forEach(function(q, index) {
                                html += '<div class="card mt-2">';
                                html += '<div class="card-body">';
                                html += '<h6>Question ' + (index + 1) + ' (' + q.type + ')</h6>';
                                html += '<p>' + q.text + '</p>';
                                if (q.suggestedOptions && q.suggestedOptions.length > 0) {
                                    html += '<div><strong>Options:</strong><ul>';
                                    q.suggestedOptions.forEach(function(opt) {
                                        html += '<li>' + opt.text + ' (' + opt.points + ' pts)</li>';
                                    });
                                    html += '</ul></div>';
                                }
                                html += '</div></div>';
                            });
                            $('#generationResult').html(html);
                        } else {
                            $('#generationResult').html('<div class="alert alert-danger">❌ Generation Failed: ' + (response.message || 'Unknown error') + '</div>');
                        }
                    },
                    error: function(xhr, status, err) {
                        $('#generationResult').html('<div class="alert alert-danger">❌ Generation Request Failed: ' + (status || '') + ' ' + (err || '') + '</div>');
                    }
                });
            });
        });
    </script>
</body>
</html>
