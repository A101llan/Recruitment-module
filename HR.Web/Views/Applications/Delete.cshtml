@model HR.Web.Models.Application
@{
    ViewBag.Title = "Delete Application";
}
<h3>Delete Application</h3>
<p>Are you sure you want to delete this application for @Model.ApplicantId / @Model.PositionId?</p>
@using (Html.BeginForm("DeleteConfirmed","Applications", new { id = Model.Id }, FormMethod.Post)) {
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    @Html.ActionLink("Cancel","Index", null, new { @class="btn btn-link"})
}































