@model HR.Web.Models.Application
@{
    ViewBag.Title = "Edit Application";
}
<h3>Edit Application</h3>
@using (Html.BeginForm("Edit","Applications", FormMethod.Post, new { enctype="multipart/form-data" })) {
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.ApplicantId, "Applicant")
        @Html.DropDownList("ApplicantId", null, "-- Select --", new { @class="form-control" })
        @Html.ValidationMessageFor(m => m.ApplicantId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.PositionId, "Position")
        @Html.DropDownList("PositionId", null, "-- Select --", new { @class="form-control" })
        @Html.ValidationMessageFor(m => m.PositionId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Status)
        @Html.TextBoxFor(m => m.Status, new { @class="form-control" })
    </div>
    <div class="form-group">
        <label>Resume</label>
        <input type="file" name="resume" class="form-control-file" />
        @if (!string.IsNullOrEmpty(Model.ResumePath))
        {
            <div class="small text-muted">Current: @Model.ResumePath</div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Back","Index", null, new { @class="btn btn-link" })
}
@section Scripts { @Scripts.Render("~/bundles/jqueryval") }



















