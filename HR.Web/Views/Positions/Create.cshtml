@model HR.Web.Models.Position
@{
    ViewBag.Title = "Create Position";
}
<div class="container mt-5 mb-5" style="max-width:600px;">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Create New Position</h3>
        </div>
        <div class="card-body bg-white">
@{
    var questions = ViewBag.QuestionList as IEnumerable<HR.Web.Models.Question>;
    Html.EnableClientValidation(false);
    Html.EnableUnobtrusiveJavaScript(false);
}
            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "positionCreateForm" })) {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Title, "Position Title", htmlAttributes: new { @class = "font-weight-bold" })
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "e.g., Senior Software Engineer" })
                    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                </div>
                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Description, "Description", htmlAttributes: new { @class = "font-weight-bold" })
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 3, placeholder = "Describe the role and responsibilities..." })
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(m => m.SalaryMin, "Minimum Salary", htmlAttributes: new { @class = "font-weight-bold" })
                        @Html.TextBoxFor(m => m.SalaryMin, new { @class = "form-control", placeholder = "e.g., 30000" })
                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(m => m.SalaryMax, "Maximum Salary", htmlAttributes: new { @class = "font-weight-bold" })
                        @Html.TextBoxFor(m => m.SalaryMax, new { @class = "form-control", placeholder = "e.g., 50000" })
                    </div>
                </div>
                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.DepartmentId, "Department", htmlAttributes: new { @class = "font-weight-bold" })
                    @Html.DropDownList("DepartmentId", null, "-- Select Department --", new { @class = "form-control" })
                </div>
                <div class="form-check mb-3">
                    @Html.CheckBoxFor(m => m.IsOpen, new { @class = "form-check-input" })
                    @Html.LabelFor(m => m.IsOpen, new { @class = "form-check-label" })
                </div>

                @* Dynamic question selection inside the form *@
                if (questions != null && questions.Any())
                {
                    <hr />
                    <div class="form-group mb-3">
                        <label class="font-weight-bold">Additional questionnaire questions</label>
                        <small class="form-text text-muted mb-2">
                            Select which reusable questions should appear for applicants of this position.
                        </small>
                        @foreach (var q in questions)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="selectedQuestions" value="@q.Id" id="q_@q.Id" />
                                <label class="form-check-label" for="q_@q.Id">@q.Text</label>
                            </div>
                        }
                    </div>
                }

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Save</button>
                    @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-link" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
<script>
    (function () {
        var form = document.getElementById('positionCreateForm');
        if (!form) return;
        form.addEventListener('submit', function (e) {
            console.log('[Positions/Create] Submit clicked. Current values:', {
                title: document.getElementById('Title') && document.getElementById('Title').value,
                description: document.getElementById('Description') && document.getElementById('Description').value,
                salaryMin: document.getElementById('SalaryMin') && document.getElementById('SalaryMin').value,
                salaryMax: document.getElementById('SalaryMax') && document.getElementById('SalaryMax').value,
                departmentId: document.getElementById('DepartmentId') && document.getElementById('DepartmentId').value,
                isOpen: document.getElementById('IsOpen') && document.getElementById('IsOpen').checked
            });
        });
    })();
</script>
}








