@model IEnumerable<HR.Web.ViewModels.UserManagementViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "User Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-users"></i> User Management
                    </h3>
                    <div>
                        <a href="@Url.Action("SecurityLogs", "Admin")" class="btn btn-info">
                            <i class="fas fa-shield-alt"></i> Security Logs
                        </a>
                        <a href="@Url.Action("Index", "Dashboard")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Dashboard
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Role</th>
                                    <th>Status</th>
                                    <th>Failed Attempts</th>
                                    <th>Last Login</th>
                                    <th>Last IP</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="9" class="text-center text-muted py-4">
                                            <i class="fas fa-users-slash fa-3x mb-3"></i>
                                            <p>No users found.</p>
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@user.UserName</strong>
                                            </td>
                                            <td>@user.Email</td>
                                            <td>@user.Phone</td>
                                            <td>
                                                <span class="badge @user.RoleBadgeClass">
                                                    @user.Role
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge @user.StatusBadgeClass">
                                                    @user.Status
                                                </span>
                                                @if (user.IsLocked && user.LockoutEndTime.HasValue)
                                                {
                                                    <small class="text-muted d-block">
                                                        <i class="fas fa-clock"></i>
                                                        Until @user.LockoutEndTime.Value.ToString("HH:mm")
                                                    </small>
                                                }
                                            </td>
                                            <td>
                                                @if (user.FailedLoginAttempts > 0)
                                                {
                                                    <span class="text-warning">
                                                        <i class="fas fa-exclamation-triangle"></i> @user.FailedLoginAttempts
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-success">
                                                        <i class="fas fa-check-circle"></i> 0
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                @if (user.LastLoginDate.HasValue)
                                                {
                                                    <small>@user.LastLoginDate.Value.ToString("MMM dd, yyyy HH:mm")</small>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">Never</small>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-monospace">@user.LastLoginIP</small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("UpdateUserRole", new { id = user.Id })" 
                                                       class="btn btn-sm btn-outline-primary" 
                                                       title="Update Role">
                                                        <i class="fas fa-user-edit"></i>
                                                    </a>
                                                    @if (user.IsLocked)
                                                    {
                                                        <form method="post" action="@Url.Action("UnlockUserAccount", new { id = user.Id })" 
                                                              style="display: inline;">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-sm btn-outline-success" 
                                                                    title="Unlock Account"
                                                                    onclick="return confirm('Are you sure you want to unlock this user account?');">
                                                                <i class="fas fa-unlock"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="row mt-4">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        <i class="fas fa-info-circle"></i> Legend
                                    </h6>
                                    <div class="row">
                                        <div class="col-6">
                                            <p class="mb-1"><strong>Status:</strong></p>
                                            <span class="badge badge-success">Active</span> - Account is normal<br>
                                            <span class="badge badge-danger">Locked</span> - Account is locked
                                        </div>
                                        <div class="col-6">
                                            <p class="mb-1"><strong>Roles:</strong></p>
                                            <span class="badge badge-danger">Admin</span> - Full access<br>
                                            <span class="badge badge-primary">Client</span> - Basic access
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        <i class="fas fa-chart-bar"></i> Statistics
                                    </h6>
                                    <div class="row text-center">
                                        <div class="col-4">
                                            <h4 class="text-primary">@Model.Count()</h4>
                                            <small>Total Users</small>
                                        </div>
                                        <div class="col-4">
                                            <h4 class="text-success">@Model.Count(u => !u.IsLocked)</h4>
                                            <small>Active</small>
                                        </div>
                                        <div class="col-4">
                                            <h4 class="text-danger">@Model.Count(u => u.IsLocked)</h4>
                                            <small>Locked</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Add any interactive functionality here
            $('.table').DataTable({
                "pageLength": 25,
                "order": [[0, "asc"]]
            });
        });
    </script>
}
