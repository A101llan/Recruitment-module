@model List<HR.Web.Models.QuestionAdminViewModel>
@{
    ViewBag.Title = "Question Bank";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Question Bank</h2>
            <p class="text-muted mb-0">Manage and organize your recruitment questionnaire pool.</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-magic btn-primary shadow-sm" href="@Url.Action("GenerateQuestions", "Admin")">
                <i class="fas fa-magic mr-1"></i> Generate with AI
            </a>
            <a class="btn btn-success shadow-sm" href="@Url.Action("EditQuestion", "Admin")">
                <i class="fas fa-plus mr-1"></i> Add New Question
            </a>
        </div>
    </div>
    
    @if (TempData["Message"] != null) {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle mr-2"></i> @TempData["Message"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }
    
    <!-- Filter and Actions Bar -->
    <div class="card shadow-sm border-0 mb-3 bg-light">
        <div class="card-body p-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-white border-right-0"><i class="fas fa-search text-muted"></i></span>
                        </div>
                        <input type="text" id="questionSearch" class="form-control border-left-0" placeholder="Search questions by text or type...">
                    </div>
                </div>
                <div class="col-md-6 text-md-right mt-3 mt-md-0">
                    <div id="batchActions" style="display: none;">
                        <span class="text-muted mr-3"><span id="selectedCount">0</span> selected</span>
                        <button type="button" class="btn btn-outline-danger btn-sm" onclick="batchDelete()">
                            <i class="fas fa-trash-alt mr-1"></i> Delete Selected
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="questionsTable">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th style="width: 40px;" class="pl-4">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="selectAll">
                                    <label class="custom-control-label" for="selectAll"></label>
                                </div>
                            </th>
                            <th>Question Details</th>
                            <th>Choices & Weights</th>
                            <th class="text-right pr-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var q in Model) {
                            <tr class="question-row" data-search="@q.Text.ToLower() @q.Type.ToLower()">
                                <td class="pl-4 align-middle">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input question-check" id="check-@q.Id" value="@q.Id">
                                        <label class="custom-control-label" for="check-@q.Id"></label>
                                    </div>
                                </td>
                                <td class="align-middle">
                                    <div class="fw-bold text-dark font-weight-bold" style="font-size: 1.05rem;">@q.Text</div>
                                    <div class="mt-1">
                                        <span class="badge badge-light border text-uppercase">@q.Type</span>
                                        @if (q.IsActive) {
                                            <span class="badge badge-success-soft text-success">Active</span>
                                        } else {
                                            <span class="badge badge-secondary-soft text-secondary">Inactive</span>
                                        }
                                    </div>
                                </td>
                                <td class="align-middle">
                                    <div class="d-flex flex-wrap gap-1">
                                    @foreach (var o in q.Options) {
                                        <span class="badge badge-info-soft text-info border border-info mr-1 mb-1">
                                            @o.Text (@o.Points pt)
                                        </span>
                                    }
                                    @if (!q.Options.Any()) {
                                        <span class="text-muted small"><em>Manual Entry / No Options</em></span>
                                    }
                                    </div>
                                </td>
                                <td class="text-right pr-4 align-middle">
                                    <div class="btn-group">
                                        <a class="btn btn-sm btn-light border" href="@Url.Action("EditQuestion", "Admin", new { id = q.Id })" title="Edit">
                                            <i class="fas fa-edit text-primary"></i>
                                        </a>
                                        <form method="post" action="@Url.Action("DeleteQuestion", "Admin")" style="display:inline;" onsubmit="return confirm('Permanently delete this question?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@q.Id" />
                                            <button type="submit" class="btn btn-sm btn-light border" title="Delete">
                                                <i class="fas fa-trash text-danger"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any()) {
                            <tr>
                                <td colspan="4" class="text-center py-5 text-muted bg-white">
                                    <div class="opacity-25 mb-3">
                                        <i class="fas fa-question-circle fa-4x"></i>
                                    </div>
                                    <h5>No questions found</h5>
                                    <p>Start by adding manually or generating with AI.</p>
                                    <a href="@Url.Action("GenerateQuestions", "Admin")" class="btn btn-primary mt-2">
                                        Generate First Questions
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white border-top p-3 d-flex justify-content-between align-items-center">
            <span class="text-muted small">Showing @Model.Count questions total</span>
            <button type="button" id="exportBtn" class="btn btn-outline-secondary btn-sm shadow-sm">
                <i class="fas fa-file-export mr-1"></i> Export Question Bank (CSV)
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Real-time Search Filter
            $("#questionSearch").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $(".question-row").filter(function() {
                    $(this).toggle($(this).data("search").indexOf(value) > -1);
                });
            });

            // Select All Logic
            $("#selectAll").change(function() {
                var checked = $(this).prop("checked");
                $(".question-check").prop("checked", checked);
                updateBatchUI();
            });

            $(".question-check").change(function() {
                updateBatchUI();
            });

            function updateBatchUI() {
                var total = $(".question-check").length;
                var checkedCount = $(".question-check:checked").length;
                
                // Synchronize Select All checkbox state
                $("#selectAll").prop("checked", total > 0 && total === checkedCount);

                if (checkedCount > 0) {
                    $("#batchActions").fadeIn(200);
                    $("#selectedCount").text(checkedCount);
                } else {
                    $("#batchActions").fadeOut(200);
                }
            }

            // Batch Delete
            window.batchDelete = function() {
                var ids = $(".question-check:checked").map(function() { return $(this).val(); }).get();
                if (ids.length === 0) return;

                if (confirm("Are you sure you want to delete " + ids.length + " selected questions? This cannot be undone.")) {
                    $.ajax({
                        url: '@Url.Action("BatchDeleteQuestions", "Admin")',
                        type: 'POST',
                        data: { 
                            questionIds: ids,
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function(res) {
                            if (res.success) {
                                location.reload();
                            } else {
                                alert("Error: " + res.message);
                            }
                        }
                    });
                }
            };

            // Export logic
            $("#exportBtn").click(function() {
                var btn = $(this);
                btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin mr-1"></i> Exporting...');
                
                $.ajax({
                    url: '@Url.Action("ExportQuestionBank", "Admin")',
                    type: 'POST',
                    data: { __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() },
                    success: function(res) {
                        if (res.success) {
                            var blob = new Blob([res.data], { type: 'text/csv;charset=utf-8;' });
                            var link = document.createElement("a");
                            var url = URL.createObjectURL(blob);
                            link.setAttribute("href", url);
                            link.setAttribute("download", "QuestionBank_" + new Date().toISOString().slice(0,10) + ".csv");
                            link.style.visibility = 'hidden';
                            document.body.appendChild(link);
                            link.click();
                            document.body.removeChild(link);
                        } else {
                            alert("Export failed: " + res.message);
                        }
                    },
                    complete: function() {
                        btn.prop('disabled', false).html('<i class="fas fa-file-export mr-1"></i> Export Question Bank (CSV)');
                    }
                });
            });
        });
    </script>
}

<style>
    .bg-success-soft { background-color: rgba(40, 167, 69, 0.1); border: 1px solid rgba(40, 167, 69, 0.2); }
    .bg-secondary-soft { background-color: rgba(108, 117, 125, 0.1); border: 1px solid rgba(108, 117, 125, 0.2); }
    .bg-info-soft { background-color: rgba(23, 162, 184, 0.1); }
    .btn-magic { background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%); border: none; color: white !important; }
    .btn-magic:hover { background: linear-gradient(135deg, #4f46e5 0%, #9333ea 100%); opacity: 0.9; box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3) !important; }
    .gap-2 { gap: 0.5rem; }
    .gap-1 { gap: 0.25rem; }
    .table thead th { border-top: none; font-weight: 600; text-transform: uppercase; font-size: 0.8rem; letter-spacing: 0.05em; }
    .question-row:hover { background-color: #f8fbff !important; }
    .custom-control-label { cursor: pointer; }
</style>

