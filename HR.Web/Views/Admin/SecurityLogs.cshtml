@model HR.Web.ViewModels.SecurityLogsViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Security Logs";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-shield-alt"></i> Security Logs
                    </h3>
                    <div>
                        <a href="@Url.Action("UserManagement", "Admin")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to User Management
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Statistics Cards -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Total Login Attempts</h5>
                                    <h3 class="card-text">@Model.TotalLoginAttempts</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Successful Logins</h5>
                                    <h3 class="card-text">@Model.SuccessfulLogins</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-danger text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Failed Attempts</h5>
                                    <h3 class="card-text">@Model.FailedLoginAttempts</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Audit Logs</h5>
                                    <h3 class="card-text">@Model.TotalAuditLogs</h3>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Filter Form -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-filter"></i> Filter <span id="filter-context">Login Attempts</span>
                            </h5>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("SecurityLogs", "Admin", FormMethod.Get, new { id = "filterForm" }))
                            {
                                <div class="row">
                                    <div class="col-md-2">
                                        <label for="Username">Username</label>
                                        @Html.TextBoxFor(m => m.Filter.Username, new { @class = "form-control", placeholder = "Filter by username..." })
                                    </div>
                                    <div class="col-md-2">
                                        <label for="IPAddress">IP Address</label>
                                        @Html.TextBoxFor(m => m.Filter.IPAddress, new { @class = "form-control", placeholder = "Filter by IP..." })
                                    </div>
                                    <div class="col-md-2">
                                        <label for="StartDate">Start Date</label>
                                        @Html.TextBoxFor(m => m.Filter.StartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                    </div>
                                    <div class="col-md-2">
                                        <label for="EndDate">End Date</label>
                                        @Html.TextBoxFor(m => m.Filter.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                    </div>
                                    <div class="col-md-2" id="actionFilterContainer">
                                        <label for="Action">Action</label>
                                        @Html.TextBoxFor(m => m.Filter.Action, new { @class = "form-control", placeholder = "Filter by action..." })
                                    </div>
                                    <div class="col-md-2" id="controllerFilterContainer" style="display:none;">
                                        <label for="Controller">Controller</label>
                                        @Html.TextBoxFor(m => m.Filter.Controller, new { @class = "form-control", placeholder = "Filter by controller..." })
                                    </div>
                                    <div class="col-md-2">
                                        <label>&nbsp;</label><br>
                                        <div class="d-flex justify-content-center">
                                            <button type="submit" class="btn btn-outline-primary me-4" title="Filter Logs">
                                                <i class="fas fa-search"></i>
                                            </button>
                                            <a href="@Url.Action("SecurityLogs")" class="btn btn-outline-secondary" title="Clear Filters">
                                                <i class="fas fa-times"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <input type="hidden" id="activeTab" name="activeTab" value="login" />
                            }
                        </div>
                    </div>

                    <!-- Tabs for different log types -->
                    <ul class="nav nav-tabs" id="logsTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="login-tab" data-toggle="tab" href="#login-logs" role="tab">
                                <i class="fas fa-sign-in-alt"></i> Login Attempts (@Model.LoginAttempts.Count)
                                <span class="tab-indicator active-indicator">
                                    <i class="fas fa-check-circle text-success"></i>
                                </span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="audit-tab" data-toggle="tab" href="#audit-logs" role="tab">
                                <i class="fas fa-history"></i> Audit Logs (@Model.AuditLogs.Count)
                                <span class="tab-indicator inactive-indicator">
                                    <i class="fas fa-circle text-muted"></i>
                                </span>
                            </a>
                        </li>
                    </ul>

                    <div class="tab-content" id="logsTabContent">
                        <!-- Login Attempts Tab -->
                        <div class="tab-pane fade show active" id="login-logs" role="tabpanel">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>Time</th>
                                            <th>Username</th>
                                            <th>IP Address</th>
                                            <th>Status</th>
                                            <th>Failure Reason</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (!Model.LoginAttempts.Any())
                                        {
                                            <tr>
                                                <td colspan="5" class="text-center text-muted py-4">
                                                    <i class="fas fa-sign-in-alt fa-3x mb-3"></i>
                                                    <p>No login attempts found.</p>
                                                </td>
                                            </tr>
                                        }
                                        else
                                        {
                                            foreach (var log in Model.LoginAttempts)
                                            {
                                                <tr>
                                                    <td>@log.AttemptTime.ToString("MMM dd, yyyy HH:mm:ss")</td>
                                                    <td>@log.Username</td>
                                                    <td><code>@log.IPAddress</code></td>
                                                    <td>
                                                        <i class="fas @log.StatusIcon @log.StatusClass"></i>
                                                        @(log.WasSuccessful ? "Success" : "Failed")
                                                    </td>
                                                    <td>@log.FailureReason</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Audit Logs Tab -->
                        <div class="tab-pane fade" id="audit-logs" role="tabpanel">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>Time</th>
                                            <th>Username</th>
                                            <th>Action</th>
                                            <th>Controller</th>
                                            <th>IP Address</th>
                                            <th>Status</th>
                                            <th>Details</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (!Model.AuditLogs.Any())
                                        {
                                            <tr>
                                                <td colspan="7" class="text-center text-muted py-4">
                                                    <i class="fas fa-history fa-3x mb-3"></i>
                                                    <p>No audit logs found.</p>
                                                    <small class="text-muted">
                                                        Audit logs are generated when users perform actions in the system.
                                                        Try performing some actions (create/update/delete) to see logs here.
                                                    </small>
                                                </td>
                                            </tr>
                                        }
                                        else
                                        {
                                            foreach (var log in Model.AuditLogs)
                                            {
                                                <tr>
                                                    <td>@log.Timestamp.ToString("MMM dd, yyyy HH:mm:ss")</td>
                                                    <td>@log.Username</td>
                                                    <td>@log.Action</td>
                                                    <td>@log.Controller</td>
                                                    <td><code>@log.IPAddress</code></td>
                                                    <td>
                                                        <i class="fas @log.StatusIcon @log.StatusClass"></i>
                                                        @(log.WasSuccessful ? "Success" : "Failed")
                                                    </td>
                                                    <td>
                                                        @if (!string.IsNullOrEmpty(log.ErrorMessage))
                                                        {
                                                            <span class="text-danger" title="@log.ErrorMessage">
                                                                <i class="fas fa-exclamation-triangle"></i> Error
                                                            </span>
                                                        }
                                                        else if (!string.IsNullOrEmpty(log.EntityId))
                                                        {
                                                            <small class="text-muted">ID: @log.EntityId</small>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            $('[title]').tooltip();
            
            // Handle tab switching
            $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
                var target = $(e.target).attr("href"); // activated tab
                
                // Update visual indicators
                $('.tab-indicator').removeClass('active-indicator inactive-indicator');
                $('.tab-indicator').empty();
                
                if (target === "#login-logs") {
                    // Login Attempts tab is active
                    $('#login-tab .tab-indicator').addClass('active-indicator')
                        .html('<i class="fas fa-check-circle text-success"></i>');
                    $('#audit-tab .tab-indicator').addClass('inactive-indicator')
                        .html('<i class="fas fa-circle text-muted"></i>');
                } else {
                    // Audit Logs tab is active
                    $('#audit-tab .tab-indicator').addClass('active-indicator')
                        .html('<i class="fas fa-check-circle text-success"></i>');
                    $('#login-tab .tab-indicator').addClass('inactive-indicator')
                        .html('<i class="fas fa-circle text-muted"></i>');
                }
            });
            
            // Auto-refresh logs every 30 seconds
            setInterval(function() {
                // Only auto-refresh if no filters are applied
                var hasFilters = $('#Filter_Username').val() || 
                               $('#Filter_IPAddress').val() || 
                               $('#Filter_StartDate').val() || 
                               $('#Filter_EndDate').val();
                
                if (!hasFilters) {
                    // Reload the page to get fresh data
                    location.reload();
                }
            }, 30000);
            
            // Add real-time refresh for audit logs when filter is applied
            $('form').submit(function() {
                // Show loading indicator
                $('.tab-pane').addClass('opacity-50');
            });
        });
    </script>
    
    <style>
        .opacity-50 {
            opacity: 0.5;
            transition: opacity 0.3s ease;
        }
        .tab-indicator {
            margin-left: 8px;
            font-size: 12px;
        }
        .active-indicator {
            animation: pulse 1s infinite;
        }
        @@keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }
        .nav-tabs .nav-link {
            position: relative;
        }
        .nav-tabs .nav-link.active {
            font-weight: bold;
            background-color: #f8f9fa;
            border-bottom-color: transparent;
        }
        .nav-tabs .nav-link:not(.active) {
            color: #6c757d;
        }
        .nav-tabs .nav-link:not(.active):hover {
            color: #007bff;
        }
    </style>
}
