@model HR.Web.Models.Onboarding
@{
    ViewBag.Title = "Create Onboarding";
}
<h3>Create Onboarding</h3>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.ApplicationId, "Application")
        @Html.DropDownList("ApplicationId", null, "-- Select --", new { @class="form-control" })
        @Html.ValidationMessageFor(m => m.ApplicationId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.StartDate)
        @Html.TextBoxFor(m => m.StartDate, "{0:yyyy-MM-dd}", new { @class="form-control", type="date" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Tasks)
        @Html.TextAreaFor(m => m.Tasks, new { @class="form-control", rows=3 })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Status)
        @Html.TextBoxFor(m => m.Status, new { @class="form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    @Html.ActionLink("Back","Index", null, new { @class = "btn btn-red btn-sm" })
}
@section Scripts { @Scripts.Render("~/bundles/jqueryval") }































