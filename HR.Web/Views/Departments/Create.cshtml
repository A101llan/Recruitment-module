@model HR.Web.Models.Department
@{
    ViewBag.Title = "Create Department";
}
<div class="container mt-5 mb-5" style="max-width:500px;">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Create Department</h3>
        </div>
        <div class="card-body bg-white">
            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()
                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.Name, "Department Name", htmlAttributes: new { @class = "font-weight-bold" })
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Department Name" })
                    <small class="form-text text-muted mb-1">e.g., Human Resources, Engineering, Marketing</small>
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>
                <!-- If you want to add description or other info, add here. -->
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Save</button>
                    @Html.ActionLink("Back","Index", null, new { @class="btn btn-link" })
                </div>
            }
        </div>
    </div>
</div>








