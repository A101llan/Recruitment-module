@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Dashboard";
}
<div class="row">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Open Positions</h5>
                <p class="card-text display-4">@ViewBag.OpenPositions</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title">Pending Applications</h5>
                <p class="card-text display-4">@ViewBag.PendingApplications</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Scheduled Interviews</h5>
                <p class="card-text display-4">@ViewBag.ScheduledInterviews</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title">Total Users</h5>
                <p class="card-text display-4">@ViewBag.TotalUsers</p>
            </div>
        </div>
    </div>
</div>

@if (User != null && User.Identity != null && User.IsInRole("Admin"))
{
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-tachometer-alt"></i> Quick Admin Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <a href="@Url.Action("UserManagement", "Admin")" class="btn btn-outline-primary btn-block mb-2">
                                <i class="fas fa-users"></i> User Management
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("SecurityLogs", "Admin")" class="btn btn-outline-danger btn-block mb-2">
                                <i class="fas fa-shield-alt"></i> Security Logs
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Questions", "Admin")" class="btn btn-outline-warning btn-block mb-2">
                                <i class="fas fa-question-circle"></i> Questions
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Index", "Applications")" class="btn btn-outline-success btn-block mb-2">
                                <i class="fas fa-file-alt"></i> Applications
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


