@model HR.Web.Models.Interview
@{
    ViewBag.Title = "Edit Interview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-size: 0.97rem;
        background: #f6faff;
        min-height: 100vh;
    }
    .card-blue {
        background: #fafdff;
        border-radius: 0.4rem;
        box-shadow: 0 2px 6px rgba(0,0,0,0.08);
        border: 1.2px solid #b2d7f7;
        padding: 1.5rem;
        margin-top: 1.2rem;
    }
    .page-title {
        color: #0d2c4a;
        font-weight: 600;
        margin-bottom: 1rem;
    }
</style>

<div class="container-fluid">
    <div class="card-blue">
        <h3 class="page-title"><i class="fas fa-edit"></i> Reschedule Interview</h3>
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)
            <div class="form-row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.ApplicationId, "Application")
                    @Html.DropDownList("ApplicationId", null, "-- Select --", new { @class="form-control" })
                    @Html.ValidationMessageFor(m => m.ApplicationId)
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.InterviewerId, "Interviewer")
                    @Html.DropDownList("InterviewerId", null, "-- Select --", new { @class="form-control" })
                    @Html.ValidationMessageFor(m => m.InterviewerId)
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.ScheduledAt, "Scheduled Date & Time")
                    @Html.TextBoxFor(m => m.ScheduledAt, "{0:yyyy-MM-ddTHH:mm}", new { @class="form-control", type="datetime-local" })
                </div>
                <div class="form-group col-md-6">
                    @Html.LabelFor(m => m.Mode, "Mode (Remote / Onsite)")
                    @Html.TextBoxFor(m => m.Mode, new { @class="form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Notes)
                @Html.TextAreaFor(m => m.Notes, new { @class="form-control", rows=3 })
            </div>
            <button type="submit" class="btn btn-blue">Save</button>
            @Html.ActionLink("Back","Index", null, new { @class = "btn btn-secondary ml-2" })
        }
    </div>
</div>































